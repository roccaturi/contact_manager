<div class='people'>
  <p id="notice"><%= notice %></p>

  <h1><%= @person %></h1>

  <%= render 'phone_numbers/phone_numbers', phone_numbers: @person.phone_numbers %>

  <p><%= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person') %></p>

  <%= render 'email_addresses/email_addresses', email_addresses: @person.email_addresses %>

  <p><%= link_to 'Add email address', new_email_address_path(contact_id: @person.id, contact_type: 'Person') %></p>

  <%= link_to 'Edit', edit_person_path(@person) %> |
  <%= link_to 'Back', people_path %>
</div>
