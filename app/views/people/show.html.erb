<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<p>
  <strong>Phone numbers:</strong>
  <ul>
    <% @person.phone_numbers.each do |phone| %>
      <li>
        <%= phone.number %>&nbsp;
        <%= link_to 'edit', edit_phone_number_path(phone) %>&nbsp;
        <%= link_to 'delete', phone_number_path(phone), method: 'delete' %>
        </li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Email addresses:</strong>
  <ul>
    <% @person.email_addresses.each do |email| %>
      <li>
        <%= email.address %>
        <!-- <%= link_to 'edit', edit_email_address_path(email) %>&nbsp;
        <%= link_to 'delete', email_address_path(email), method: 'delete' %> -->
        </li>
    <% end %>
  </ul>
</p>

<p><%= link_to 'Add phone number', new_phone_number_path(person_id: @person.id) %></p>

<%= link_to 'Edit', edit_person_path(@person) %> |
